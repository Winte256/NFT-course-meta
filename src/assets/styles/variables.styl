}

$mediaSizes = {
  phoneS: 375px,
  phone: 480px,
  tablet: 799px,
  desktop: 992px,
  large: 1026px,
  extraLarge: 1280px,
  giant: 1600px
};

getMedia(fromSize, toSize = false) {
  if (toSize) {
    @media (min-width: fromSize) and (max-width: toSize) {
      {block};
    }
  } else {
    @media (min-width: fromSize) {
      {block};
    }
  }
}

mediaPhone() {
  +getMedia($mediaSizes.phone) {
    {block};
  }
}

mediaPhoneS() {
  +getMedia($mediaSizes.phoneS) {
    {block};
  }
}

mediaTablet() {
  +getMedia($mediaSizes.tablet) {
    {block};
  }
}

mediaDesktop() {
  +getMedia($mediaSizes.desktop) {
    {block};
  }
}

mediaLarge() {
  +getMedia($mediaSizes.large) {
    {block};
  }
}

mediaExtraLarge() {
  +getMedia($mediaSizes.extraLarge) {
    {block};
  }
}

mediaGiant() {
  +getMedia($mediaSizes.giant) {
    {block};
  }
}

$fontSizes = {
  desktop: {
    h1: {
      fontSize: 17px,
      lineHeight: 22px,
      },
    text: {
      fontSize: 10px,
      lineHeight: 13px,
      },
    policies: {
      fontSize: 8px,
      lineHeight: 10px,
      },
    button: {
      fontSize: 14px,
      lineHeight: 18px,
      },
    contact: {
      fontSize: 16px,
      lineHeight: 32px,
      }
  },
  mobile: {
    h1: {
      fontSize: 17px,
      lineHeight: 22px,
      },
    text: {
      fontSize: 10px,
      lineHeight: 13px,
      },
    policies: {
      fontSize: 8px,
      lineHeight: 10px,
      },
    button: {
      fontSize: 14px,
      lineHeight: 18px,
      },
    contact: {
      fontSize: 16px,
      lineHeight: 32px,
      }
  }
};

getFont(name = 'text') {
  font-size: $fontSizes.mobile[name].fontSize;
  line-height: $fontSizes.mobile[name].lineHeight;

  +mediaTablet() {
    font-size: $fontSizes.desktop[name].fontSize;
    line-height: $fontSizes.desktop[name].lineHeight;
  }
}

getFontH1() {
  getFont('h1');
  font-weight: 700;
}

getFontText() {
  getFont('text');
  font-family "Montserrat", sans-serif
  font-weight: 400;
}

getFontPolicies() {
  getFont('policies');
  font-family "Montserrat", sans-serif
  font-weight: 300;
}

getFontButton() {
  getFont('button');
  font-weight: 700;
}

getFontContact() {
  getFont('contact');
  font-weight: 300;
}
